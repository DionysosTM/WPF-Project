<!-- Window avec des paramètres pour diapo (pas de souris, plein écran) -->
<Window x:Class="projet_wpf.Views.SlideShowWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    WindowStyle="None"
    WindowState="Maximized"
    Background="Black"
    Cursor="None"
    KeyDown="Window_KeyDown">

    <!-- Grid qui contient l'image du diapo -->
    <Grid>
        <Image x:Name="DiapoImage"
           Source="{Binding CurrentPhoto.FullImage}"
           Stretch="Uniform"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Opacity="1"/>
    </Grid>
</Window>